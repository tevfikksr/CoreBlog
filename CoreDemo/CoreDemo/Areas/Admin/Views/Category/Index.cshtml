@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<br />
<table class="table table-borderless">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Statü</th>
        <th>Aktif/Pasif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="DeleteBtn"
               onclick="return confirm('Silmek İstediğinize Emin Misiniz?');" class="btn btn-info">Sil</a>
            </td>
            <td>@item.CategoryStatus</td>
            <td>
                <a href="/Admin/Category/StatusCategory/@item.CategoryID" id="StatusBtn"
               onclick="return confirm('Statü Değiştiriliyor?');" class="btn btn-success">Değiştir</a>
            </td>
            <td><a href="#" class="btn btn-warning"> Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br />
<hr />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))