@model EntityLayer.Concrete.Blog
<div class="row">
    <div class="col-lg-6">
        <div class="widget navy-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Dashboard</h1>

                <h3 class="font-bold no-margins">
                    Asp.Net Core 6.0
                </h3>
                <h4>Bu panelde admin işlemleri bir area yapısı üzerinden gerçekleştirilmektedir.</h4>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget lazur-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs"></h1>

                <h3 class="font-bold no-margins">
                    @* @ViewBag.v1*@
                    @Model.BlogName
                </h3>
                <small>@(Model.BlogContent.Length>130? @Model.BlogContent.Substring(0,Model.BlogContent.Substring(0,250).LastIndexOf(" "))+"...":@Model.BlogContent)</small>
            </div>
            @*            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart2"></div>
                </div>*@
            <a class="btn btn-warning btn-xs" href="/Blog/BlogReadAll/@Model.BlogID">Son Bloğu Oku</a>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget yellw-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">$ 50,992</h1>

                <h3 class="font-bold no-margins">
                    Half-year revenue margin
                </h3>
                <small>Sales marketing.</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart3"></div>
            </div>
        </div>
    </div>
</div>