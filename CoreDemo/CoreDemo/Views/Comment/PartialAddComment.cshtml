<div class="comment-top">
    <h4>Yorum Bırakın @ViewBag.i</h4>
    <div class="comment-bottom">
        <form action="/Comment/PartialAddComment/" method="post">
            <input class="form-control" id="txtname" type="text" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
            <input class="form-control" id="txttitle" type="text" name="CommentTitle" placeholder="Başlık" required="">
            <textarea class="form-control" id="txtcontent" name="CommnetContent" placeholder="Yorumunuz..." required=""></textarea>

            <button type="submit" id="btncomment" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>

@section scripts{
<script>
    $("#btncomment").click(function(){
        let newcomment={
            CommentUserName:$("#txtname").val(),
            CommentTitle:$("#txttitle").val(),
            CommnetContent:$("#txtcontent").val(),
            BlogID:@(ViewBag.i),
        };
        $.ajax({
            type:"post",
            url:"/Comment/PartialAddComment/",
            data:newcomment,
            success:function(func){
                alert("ok");
            }
        });
    });
</script>
}