@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "SendboxAsync";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>SendBox</h1>

<table class="table table-active">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı aç</a></td>
        </tr>
    }
</table>
<br />
<a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Yaz</a>